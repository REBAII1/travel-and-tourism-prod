{% extends 'base.html.twig' %}

{% block title %}Logement{% endblock %}

{% block body %}
    <h1>Logement</h1>
    <div class="card" style="width: 18rem;">
        <img src="{{ asset('uploads/images/'~ logement.image ) }}" class="card-img-top" alt="Image description">
        <div class="card-body">
          <h5 class="card-title">{{ logement.titre }}</h5>
          <p class="card-text">{{ logement.description }}</p>
          <p class="btn btn-info">{{ logement.prix }}</p>
        </div>
   </div>

    <a href="{{ path('app_logement_index') }}">back to list</a>
        {% if app.user == logement.owner %}
            <a href="{{ path('app_logement_edit', {'id': logement.id}) }}">edit</a>
            {{ include('logement/_delete_form.html.twig') }}
        {% endif %}
{% endblock %}
